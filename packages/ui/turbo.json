{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        "tsconfig.json",
        "package.json",
        "postcss.config.mjs",
        "eslint.config.ts",
        "tsup.config.ts"
      ]
    }
  }
}
