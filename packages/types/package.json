{
  "name": "@simple-stream/types",
  "version": "1.0.0",
  "description": "convenient type definitions",
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "*": [
          "dist/index.d.ts"
        ],
        "events": [
          "dist/events.d.ts"
        ],
        "models": [
          "dist/models.d.ts"
        ],
        "utils": [
          "dist/utils.d.ts"
        ],
        "types": [
          "dist/types.d.ts"
        ],
        "codegen": [
          "dist/codegen/*.d.ts"
        ]
      }
    }
  },
  "license": "MIT",
  "source": "src/index.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "events": [
        "dist/events.d.ts"
      ],
      "models": [
        "dist/models.d.ts"
      ],
      "utils": [
        "dist/utils.d.ts"
      ],
      "types": [
        "dist/types.d.ts"
      ],
      "codegen": [
        "dist/codegen/*.d.ts"
      ]
    }
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*.{js,cjs,mjs,d.ts,d.cts,d.mts}"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./utils": "./dist/utils.js",
    "./types": "./dist/types.js",
    "./models": "./dist/models.js",
    "./events": "./dist/events.js",
    "./codegen/*": "./dist/codegen/*.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build",
    "lint": "eslint",
    "format": "prettier --write \"src/**/*.{ts,cts,mts,js,mjs,cjs,json,yaml,yml}\" --ignore-unknown --cache",
    "clean": "git clean -xdf .turbo dist node_modules",
    "fix": "npm pkg fix",
    "generate-models": "pnpm tsx src/codegen/index.ts"
  },
  "devDependencies": {
    "@d0paminedriven/fs": "^7.6.0",
    "@simple-stream/eslint-config": "workspace:*",
    "@simple-stream/prettier-config": "workspace:*",
    "@simple-stream/tsconfig": "workspace:*",
    "@types/node": "^24.6.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "jiti": "^2.6.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "prettier": "@simple-stream/prettier-config"
}
