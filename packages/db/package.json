{
  "name": "@simple-stream/db",
  "version": "1.0.0",
  "description": "convenient db helpers",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/* --format esm --watch",
    "lint": "eslint",
    "format": "prisma format",
    "clean": "git clean -xdf .turbo dist node_modules",
    "postbuild": "pnpm cp:binaries",
    "prebuild": "rm -rf dist/ && pnpm db:generate",
    "predev": "pnpm db:generate",
    "predb:generate:node": "tsx src/test/schema-manipulate.ts --target node",
    "db:generate:node": "prisma generate",
    "postdb:generate:node": "tsx src/test/schema-manipulate.ts --restore from-node",
    "predb:generate:edge": "tsx src/test/schema-manipulate.ts --target edge",
    "db:generate:edge": "prisma generate --no-engine",
    "postdb:generate:edge": "tsx src/test/schema-manipulate.ts --restore from-edge",
    "db:generate": "pnpm db:generate:node && pnpm db:generate:edge",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio --browser none --port 7777",
    "precp:binaries": "tsx src/test/scan-output.ts --scan output",
    "cp:binaries": "cp -r ./src/generated/prisma/*.x.so.node ./dist/generated/prisma"
  },
  "files": [
    "dist/**",
    "edge/**",
    "prisma/**",
    "package.json"
  ],
  "exports": {
    "./node": {
      "types": "./dist/db.d.ts",
      "import": "./dist/db.js",
      "default": "./dist/db.js"
    },
    "./node/generated/client": {
      "types": "./dist/client-node.d.ts",
      "import": "./dist/client-node.js",
      "default": "./dist/client-node.js"
    },
    "./enums-node": {
      "types": "./dist/enums-node.d.ts",
      "import": "./dist/enums-node.js",
      "default": "./dist/enums-node.js"
    },
    "./edge": {
      "types": "./edge/db-edge.ts",
      "import": "./edge/db-edge.ts",
      "default": "./edge/db-edge.ts"
    },
    "./wasm": {
      "types": "./edge/wasm.ts",
      "import": "./edge/wasm.ts",
      "default": "./edge/wasm.ts"
    },
    "./edge-client-edge": {
      "types": "./edge/client-edge.ts",
      "import": "./edge/client-edge.ts",
      "default": "./edge/client-edge.ts"
    },
    "./edge-client": {
      "types": "./edge/client.ts",
      "import": "./edge/client.ts",
      "default": "./edge/client.ts"
    },
    "./edge-generated": {
      "types": "./edge/generated/client/*.d.ts",
      "import": "./edge/generated/client/*.mjs",
      "default": "./edge/generated/client/*.js"
    },
    "./edge-generated-runtime": {
      "types": "./edge/generated/client/runtime/*.d.ts",
      "import": "./edge/generated/client/runtime/*.js",
      "default": "./edge/generated/client/runtime/*.js"
    }
  },
  "dependencies": {
    "@prisma/adapter-pg": "6.16.3",
    "@prisma/client": "6.16.3",
    "@prisma/extension-accelerate": "2.0.2"
  },
  "devDependencies": {
    "@d0paminedriven/fs": "^7.6.0",
    "@simple-stream/eslint-config": "workspace:*",
    "@simple-stream/prettier-config": "workspace:*",
    "@simple-stream/tsconfig": "workspace:*",
    "@types/node": "^24.6.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "jiti": "^2.6.0",
    "prettier": "^3.6.2",
    "prisma": "^6.16.3",
    "terser": "^5.44.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "prettier": "@simple-stream/prettier-config"
}
