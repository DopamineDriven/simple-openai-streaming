{
  "name": "@simple-stream/redis",
  "version": "1.0.0",
  "description": "convenient redis helpers",
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "redis": [
          "dist/service/index.d.ts"
        ],
        "types": [
          "dist/service/types.d.ts"
        ],
        "pubsub": [
          "dist/pubsub/channels.d.ts",
          "dist/pubsub/enhanced-client.d.ts",
          "dist/pubsub/extended-events.d.ts"
        ]
      }
    }
  },
  "license": "MIT",
  "source": "src/index.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ],
      "redis": [
        "dist/service/index.d.ts"
      ],
      "types": [
        "dist/service/types.d.ts"
      ],
      "pubsub": [
        "dist/pubsub/channels.d.ts",
        "dist/pubsub/enhanced-client.d.ts",
        "dist/pubsub/extended-events.d.ts"
      ]
    }
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*.{js,cjs,d.ts,d.cts,d.mts}"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./redis": "./dist/service/index.js",
    "./types": "./dist/service/types.js",
    "./pubsub/channels": "./dist/pubsub/channels.js",
    "./pubsub/enhanced-client": "./dist/pubsub/enhanced-client.js",
    "./pubsub/extended-events": "./dist/pubsub/extended-events.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build",
    "lint": "eslint",
    "clean": "git clean -xdf .turbo dist node_modules",
    "format": "prettier --write \"src/**/*.{ts,cts,mts,js,mjs,cjs,json,yaml,yml,css,html,md}\" --ignore-unknown --cache",
    "fix": "npm pkg fix"
  },
  "dependencies": {
    "@simple-stream/types": "workspace:*",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@d0paminedriven/fs": "^7.6.0",
    "@simple-stream/eslint-config": "workspace:*",
    "@simple-stream/prettier-config": "workspace:*",
    "@simple-stream/tsconfig": "workspace:*",
    "@types/node": "^24.6.1",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "jiti": "^2.6.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "prettier": "@simple-stream/prettier-config"
}
