{
  "name": "@simple-stream/root",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "scripts": {
    "seed:env": "bash ./populate-env.sh",
    "build:db": "turbo build --filter=@simple-stream/db",
    "build:encryption": "turbo build --filter=@simple-stream/encryption",
    "build:key-validator": "turbo build --filter=@simple-stream/key-validator",
    "build:redis": "turbo build --filter=@simple-stream/redis",
    "build:targeted": "pnpm build:ui && pnpm build:redis && pnpm build:encryption && pnpm build:key-validator && pnpm build:types && pnpm build:ws-server && pnpm build:web",
    "build:types": "turbo build --filter=@simple-stream/types",
    "build:ui": "turbo build --filter=@simple-stream/ui",
    "build:web": "turbo build --filter=@simple-stream/web",
    "build:ws-server": "turbo build --filter=@simple-stream/ws-server",
    "clean": "git clean -xdf node_modules",
    "clean:house": "bash ./manage.sh clean:house",
    "dev": "turbo dev --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,cts,mts,js,jsx,mjs,cjs,json,yaml,yml,css,html,md,mdx}\" --ignore-unknown --cache",
    "generate:base64": "openssl rand -base64 64",
    "generate:hex": "openssl rand -hex 64",
    "latest:pnpm": "corepack use pnpm@latest",
    "lint": "turbo lint",
    "list:packages": "bash ./manage.sh list",
    "prepare": "husky",
    "run:web": "turbo dev --filter=@simple-stream/web",
    "run:ws-server": "turbo dev --filter=@simple-stream/ws-server",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@d0paminedriven/fs": "^7.6.0",
    "@d0paminedriven/turbogen": "^5.6.0",
    "@simple-stream/eslint-config": "workspace:*",
    "@simple-stream/prettier-config": "workspace:*",
    "@simple-stream/tsconfig": "workspace:*",
    "@types/node": "^24.6.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "prettier": "@simple-stream/prettier-config",
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": ">=9"
  }
}
