{
  "extends": "@simple-stream/tsconfig/node-pkg.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": "./",
    "rootDir": "./src","exactOptionalPropertyTypes": false,
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "public/inspect/**/*"]
}
